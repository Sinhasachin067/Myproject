<% layout("/layouts/boilerplate") %>

 <div class="row mt-3">
    <div class="col-8 offset-2">

        <h3>SignUp on Wanderlust</h3>
        <form method="POST"action="/signup" novalidate class="needs-validation">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" placeholder="Enter username" class="form-control"  required>
          <div class="valid-feedback">Good username</div>
          </div >
        
          <div>
            <label for="email" class="form-label">Email</label>
            <input name="email" id=""  placeholder="Enter email"  class="form-control"  required></input>
           
            <div class="invalid-feedback">Email</div>
    
          </div>
    
          <div class="mb-3">
            <label for="password" class="form-label">password</label>
            <input type="password" name="password" placeholder="Enter password"   class="form-control" required>
            <div class="valid-feedback">Entered strong password</div>
            
            <button class="btn mt-3 btn-success">SignUp</button>
          </div>

         
        </form>
    </div>

 </div>